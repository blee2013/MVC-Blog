<!-- Loop over each object in the projects array -->
{{#each post as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        
        <p>Created by {{post.user.username}} on {{post.created_at}}</p>
    </div>
    <div class="col-md-7">
        <p>
            <a href="/post/{{post.id}}">{{post.comments.length}}</a>
        </p>
    </div>
</div>
{{/each}}